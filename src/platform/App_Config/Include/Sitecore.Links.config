<configuration xmlns:patch=http://www.sitecore.net/xmlconfig/>
    <sitecore>
        <linkManager>
            <providers>
                <add name="localizedProvider">
                    <patch:attribute name="useDisplayName">true</patch:attribute>
                </add>
            </providers>
        </linkManager>
        <links>
            <urlBuilder>
                <useDisplayName>true</useDisplayName>
            </urlBuilder>
        </links>
    </sitecore>
</configuration>